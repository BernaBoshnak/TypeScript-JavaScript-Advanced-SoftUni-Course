{
  "name": "advanced",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "config": {
    "outDir": "dist"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && cross-var tsc --outDir $npm_package_config_outDir && npm run copy-html-files",
    "clean": "cross-var rimraf $npm_package_config_outDir",
    "copy-html-files": "cross-var copyfiles -e \"./src/**/**/*.*(ts|docx)\" -u 1 \"./src/**/**/*\" $npm_package_config_outDir && echo HTML files copied.",
    "prettier": "prettier --ignore-path .gitignore \"**/*.*(js|json|ts)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "ts-lint": "eslint . --ext .ts",
    "ts-validate": "tsc --noEmit",
    "validate": "npm-run-all --parallel check-format ts-lint ts-validate"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.7.19",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "copyfiles": "^2.4.1",
    "cross-var": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "type-fest": "^3.3.0",
    "typescript": "^4.8.3"
  }
}
